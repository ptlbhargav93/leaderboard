<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Players</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Joined date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.address %></td>
          <td><%= player.phone %></td>
          <td><%= player.email %></td>
          <td><%= player.joined_date %></td>
          <td><%= link_to 'Show Profile', player, class:"btn btn-light min-width-btn" %></td>
          <td><%= link_to 'Edit', edit_player_path(player), class:"btn btn-primary min-width-btn" %></td>
          <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger min-width-btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

<%= link_to 'New Player', new_player_path, class:"btn btn-success min-width-btn" %>
<%= link_to 'View Matches', matches_path, class:"btn btn-success min-width-btn" %>
<%= link_to 'View Leaderboard', root_path, class:"btn btn-success min-width-btn" %>