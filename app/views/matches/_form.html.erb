<%= form_with(model: match, :html => {:class => 'needs-validation was-validated'}) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :player1_id %>
    <%= form.select(:player1_id, Player.all.pluck(:name, :id), {}, { :class => 'form-control col-3', :required => true } ) %>

  </div>

  <div class="form-group">
    <%= form.label :player2_id %>
    <%= form.select(:player2_id, Player.all.pluck(:name, :id), {}, { :class => 'form-control col-3', :required => true } ) %>
  </div>

  <div class="form-group">
    <%= form.label :player1_score %>
    <%= form.number_field :player1_score, min: 0, max: 99, class: "form-control col-3", :required => true %>

  </div>

  <div class="form-group">
    <%= form.label :player2_score %>
    <%= form.number_field :player2_score, min: 0, max: 99, class: "form-control col-3", :required => true %>
  </div>

  <div class="form-group">
    <%= form.label :date_played %>
    <%= form.date_field :date_played, class: "form-control col-3", :required => true %>
  </div>

  <!-- <div class="form-group">
    <#%= form.label :winner_id %>
    <#%= form.select(:winner_id, Player.all.pluck(:name, :id), {}, { :class => 'form-control col-3' } ) %>
  </div> -->

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-success min-width-btn" %>
    <%= link_to 'Back', matches_path, class: "btn btn-primary" %>
  </div>
<% end %>
